rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Default: require authentication for all operations
      allow read, write: if request.auth != null;
    }
    
    // Public access for listing images
    match /listings/{listingId}/{fileName} {
      allow read: if true; // Anyone can read listing images
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Public access for profile images
    match /profiles/{userId}/{fileName} {
      allow read: if true; // Anyone can read profile images
      allow write: if request.auth != null && request.auth.uid == userId; // Only the owner can upload
    }
    
    // Private access for student IDs
    match /student-ids/{userId}/{fileName} {
      allow read: if request.auth != null && (
        request.auth.uid == userId || request.auth.token.admin == true
      );
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public access for general uploads
    match /uploads/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
